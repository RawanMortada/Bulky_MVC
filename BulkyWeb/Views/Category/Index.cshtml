<!-- define the model to be used (all lowercase) and type  of model-->
@model List<Category> 

@*references the TempData Notification file in partial views*@
<div class =" container"> <!--container in bootstrap is divided into 12 parts-->
    <div class ="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

<table class = "table table-bordered table-striped">
    <thead>
        <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
            @*will display what's inside 3 times since we have 3 categories in the db*@
            @foreach(var obj in Model.OrderBy(u => u.DisplayOrder)) 
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>

                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                        </div>
                </td>
            </tr>    
        }
    </tbody>
</table>
</div>